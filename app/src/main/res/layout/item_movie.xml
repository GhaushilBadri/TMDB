<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_margin="9dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="185dp">

        <ImageView
            android:id="@+id/im_movie_item"
            android:layout_width="145dp"
            android:layout_height="165dp"
            android:src="@drawable/ic_action_movie"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/acount_background"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="0.0"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title of Movie"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/tv_title_movie"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd MM yyyy"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/tv_release_date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/btn_add_watchlist"
        android:gravity="center"
        android:background="@drawable/back_button"
        android:layout_margin="6dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_add_playlist"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:text="WatchList"/>
    </LinearLayout>
</LinearLayout>